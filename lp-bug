#!/usr/bin/env python3
#
# LP bug management
#

import os
import sys

import click
from launchpadlib.launchpad import Launchpad

RED = "\033[91m"
GREEN = "\033[92m"
YELLOW = "\033[93m"
NC = "\033[00m"

